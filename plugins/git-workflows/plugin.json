{
  "name": "git-workflows",
  "displayName": "Git Workflows",
  "description": "Git and GitHub operations expert. Provides skills for commit creation, branch syncing, pull request creation, branch creation, and rebasing with validation gates and MCP integration.",
  "version": "3.0.0",
  "author": {
    "name": "Christoph Blecker",
    "email": "admin@toph.ca",
    "url": "https://github.com/cblecker"
  },
  "license": "Apache-2.0",
  "repository": "https://github.com/cblecker/claude-plugins",
  "homepage": "https://github.com/cblecker/claude-plugins",
  "keywords": [
    "git",
    "github",
    "version-control",
    "automation",
    "devops",
    "branch-management",
    "pull-requests",
    "skills",
    "workflows"
  ],
  "skills": "./skills/",
  "mcpServers": {
    "git": {
      "command": "uvx",
      "args": [
        "mcp-server-git"
      ]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  }
}
